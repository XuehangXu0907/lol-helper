<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lol.championselector.controller.PositionConfigDialogController" spacing="10.0">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <children>
      <!-- 标题区域 -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="分路配置管理" styleClass="title">
               <font>
                  <Font name="Microsoft YaHei Bold" size="16.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="positionSelector" onAction="#onPositionChanged" prefWidth="120.0" promptText="选择分路" />
         </children>
      </HBox>
      
      <Separator />
      
      <!-- Ban英雄配置区域 -->
      <VBox spacing="8.0">
         <children>
            <Label text="Ban英雄列表" styleClass="section-title">
               <font>
                  <Font name="Microsoft YaHei Bold" size="12.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <ListView fx:id="banChampionsListView" prefHeight="120.0" prefWidth="300.0" HBox.hgrow="ALWAYS" />
                  <VBox spacing="5.0">
                     <children>
                        <Button fx:id="addBanButton" onAction="#onAddBanChampionClicked" text="添加" prefWidth="60.0" />
                        <Button fx:id="removeBanButton" onAction="#onRemoveBanChampionClicked" text="删除" prefWidth="60.0" />
                        <Button fx:id="moveBanUpButton" onAction="#onMoveBanUpClicked" text="上移" prefWidth="60.0" />
                        <Button fx:id="moveBanDownButton" onAction="#onMoveBanDownClicked" text="下移" prefWidth="60.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Pick英雄配置区域 -->
      <VBox spacing="8.0">
         <children>
            <Label text="Pick英雄列表" styleClass="section-title">
               <font>
                  <Font name="Microsoft YaHei Bold" size="12.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <ListView fx:id="pickChampionsListView" prefHeight="120.0" prefWidth="300.0" HBox.hgrow="ALWAYS" />
                  <VBox spacing="5.0">
                     <children>
                        <Button fx:id="addPickButton" onAction="#onAddPickChampionClicked" text="添加" prefWidth="60.0" />
                        <Button fx:id="removePickButton" onAction="#onRemovePickChampionClicked" text="删除" prefWidth="60.0" />
                        <Button fx:id="movePickUpButton" onAction="#onMovePickUpClicked" text="上移" prefWidth="60.0" />
                        <Button fx:id="movePickDownButton" onAction="#onMovePickDownClicked" text="下移" prefWidth="60.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Separator />
      
      <!-- 按钮区域 -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="resetButton" onAction="#onResetClicked" text="重置默认" />
            <Button fx:id="cancelButton" onAction="#onCancelClicked" text="取消" />
            <Button fx:id="saveButton" onAction="#onSaveClicked" text="保存" styleClass="primary-button" />
         </children>
      </HBox>
   </children>
</VBox>